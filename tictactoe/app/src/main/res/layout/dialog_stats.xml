<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background_grey">

    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:gravity="center_vertical"
        android:minHeight="30sp">

        <TextView
            android:id="@+id/stats_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stats"
            android:textColor="@color/md_white_1000"
            android:textSize="15sp"/>

    </RelativeLayout>

    <android.support.v7.widget.GridLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:rowCount="5"
        app:orientation="horizontal">

        <TextView
            android:text="Your wins"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="0"
            app:layout_column="1"/>

        <TextView
            android:text="Phone wins"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="0"
            app:layout_column="2"/>

        <TextView
            android:text="Draws"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="0"
            app:layout_column="3"/>

        <TextView
            android:text="Dummy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="1"
            app:layout_column="0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="1"
            app:layout_column="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="1"
            app:layout_column="2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="1"
            app:layout_column="3"/>

        <TextView
            android:text="Easy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="2"
            app:layout_column="0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="2"
            app:layout_column="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="2"
            app:layout_column="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="2"
            app:layout_column="3" />

        <TextView
            android:text="Medium"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="3"
            app:layout_column="0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="3"
            app:layout_column="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="3"
            app:layout_column="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="3"
            app:layout_column="3" />

        <TextView
            android:text="Hard"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="4"
            app:layout_column="0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="4"
            app:layout_column="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="4"
            app:layout_column="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/zero"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="4"
            app:layout_column="3" />

    </android.support.v7.widget.GridLayout>

</RelativeLayout>
